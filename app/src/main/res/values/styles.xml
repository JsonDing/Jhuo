<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>
    <!-- Button -->
    <style name="BlockButton">
        <item name="android:layout_width">@dimen/block_button_width</item>
        <item name="android:layout_height">@dimen/block_button_height</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ThemeButton">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RedButton">
        <item name="colorButtonNormal">@color/md_red_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GreenButton">
        <item name="colorButtonNormal">@color/md_green_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BlueButton">
        <item name="colorButtonNormal">@color/md_blue_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="OrangeButton">
        <item name="colorButtonNormal">@color/color_a6</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PurpleButton">
        <item name="colorButtonNormal">@color/md_purple_500</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- CheckBox -->
    <style name="ThemeCheckBox">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RedCheckBox">
        <item name="colorControlActivated">@color/md_red_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="GreenCheckBox">
        <item name="colorControlActivated">@color/md_green_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="BlueCheckBox">
        <item name="colorControlActivated">@color/md_blue_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="OrangeCheckBox">
        <item name="colorControlActivated">@color/md_amber_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="PurpleCheckBox">
        <item name="colorControlActivated">@color/md_purple_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <!-- RadioButton -->
    <style name="ThemeRadioButton">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RedRadioButton">
        <item name="colorControlActivated">@color/md_red_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="GreenRadioButton">
        <item name="colorControlActivated">@color/md_green_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="BlueRadioButton">
        <item name="colorControlActivated">@color/md_blue_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="PurpleRadioButton">
        <item name="colorControlActivated">@color/md_purple_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="OrangeRadioButton">
        <item name="colorControlActivated">@color/md_orange_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <!-- Switch -->
    <style name="ThemeSwitch">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="RedSwitch">
        <item name="colorControlActivated">@color/md_red_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="GreenSwitch">
        <item name="colorControlActivated">@color/md_green_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="BlueSwitch">
        <item name="colorControlActivated">@color/md_blue_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="OrangeSwitch">
        <item name="colorControlActivated">@color/color_a6</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="PurpleSwitch">
        <item name="colorControlActivated">@color/md_purple_500</item>
        <item name="colorControlNormal">@color/md_grey_500</item>
    </style>

    <style name="OrangeShare">
        <item name="android:state_pressed">@drawable/share_press</item>
        <item name="android:state_selected">@drawable/share_normal</item>
        <item name="android:src">@drawable/share_normal</item>
    </style>

    <style name="chat_room_menu_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="chat_room_menu_item_splitter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:background">#E6E6E6</item>
    </style>

    <style name="chat_room_menu_item_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MyCheckBox">
        <item name="android:button">@drawable/check_box_style</item>
    </style>


</resources>
