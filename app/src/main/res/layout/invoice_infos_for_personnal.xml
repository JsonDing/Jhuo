<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">

    <EditText
        android:id="@+id/etInputCOntent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:hint="输入发票内容"
        android:textColor="@color/color_b1"
        android:textSize="@dimen/sp14"
        android:textColorHint="@color/color_b2"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:background="@drawable/bg_edittext_gray"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginStart="@dimen/dp15"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"
        android:layout_below="@+id/etInputCOntent"
        android:layout_marginTop="@dimen/dp15"/>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票内容"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_b1"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"/>

        <CheckBox
            android:id="@+id/cbClothes"
            android:layout_width="@dimen/dp81"
            android:layout_height="@dimen/dp28"
            android:text="服装"
            android:checked="true"
            android:layout_toEndOf="@+id/textview"
            android:layout_marginTop="@dimen/dp08"
            android:paddingStart="@dimen/dp08"
            android:paddingEnd="@dimen/dp02"
            android:button="@drawable/check_box_style"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp15"/>

        <CheckBox
            android:id="@+id/cbShoes"
            android:layout_width="@dimen/dp81"
            android:layout_height="@dimen/dp28"
            android:text="鞋子"
            android:layout_below="@+id/cbClothes"
            android:layout_toEndOf="@+id/textview"
            android:paddingStart="@dimen/dp08"
            android:paddingEnd="@dimen/dp02"
            android:button="@drawable/check_box_style"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp15"/>

        <CheckBox
            android:layout_width="@dimen/dp81"
            android:layout_height="@dimen/dp28"
            android:text="鞋子"
            android:layout_below="@+id/cbShoes"
            android:layout_toEndOf="@+id/textview"
            android:paddingStart="@dimen/dp08"
            android:paddingEnd="@dimen/dp02"
            android:button="@drawable/check_box_style"
            android:textColor="@color/color_b1"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"/>
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_a4"
        android:layout_below="@+id/layout"
        android:layout_above="@+id/btnConfirm"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:text="确定"
        android:background="@drawable/btn_selector_orange"
        android:textColor="@color/white"
        android:textSize="@dimen/sp15"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>