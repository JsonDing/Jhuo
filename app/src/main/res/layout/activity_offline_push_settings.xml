<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_offline_push_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="@dimen/dp64"
            android:gravity="center"
            android:paddingEnd="@dimen/dp20"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:id="@+id/tvTittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息推送设置"
                android:textSize="@dimen/sp17"
                android:textColor="@color/color_b1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSave"
            android:background="@color/white"
            android:layout_width="@dimen/dp64"
            android:text="@string/save"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/color_b1"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_height="@dimen/dp44"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:visibility="gone"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:gravity="bottom|left"
            android:text="@string/push_no_disturb"
            android:textColor="@color/btn_gray_pressed" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/btn_gray_normal" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_no_disturb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/push_no_disturb_on"
            android:textColor="@color/color_b1"
            android:textSize="13sp"
            android:typeface="serif" />

        <CheckBox
            android:id="@+id/cb_no_disturb_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:theme="@style/OrangeCheckBox"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:background="@color/gallery_separation" />

    <RelativeLayout
        android:id="@+id/rl_no_disturb_only_night"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/push_only_on"
            android:textColor="@color/color_b1"
            android:textSize="13sp"
            android:typeface="serif" />

        <CheckBox
            android:id="@+id/cb_no_disturb_only_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:theme="@style/OrangeCheckBox"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:background="@color/gallery_separation" />

    <RelativeLayout
        android:id="@+id/rl_no_disturb_off"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/push_no_disturb_off"
            android:textColor="@color/color_b1"
            android:textSize="13sp"
            android:typeface="serif" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/cb_no_disturb_off"
            android:theme="@style/OrangeCheckBox"/>
    </RelativeLayout>

</LinearLayout>
