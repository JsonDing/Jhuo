<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp10"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dp10"
        android:paddingEnd="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgsPre"
            android:layout_width="@dimen/dp72"
            android:layout_height="@dimen/dp72"
            android:layout_marginEnd="@dimen/dp15"
            android:src="@drawable/default_pic"
            android:layout_marginStart="@dimen/dp15"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp12"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/color_b1"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgsPre"/>

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:layout_marginTop="@dimen/dp08"
            android:lines="1"
            android:ellipsize="end"
            android:text="售价："
            android:textColor="@color/color_b2"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/imgsPre"/>

        <TextView
            android:id="@+id/tvGoodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:layout_marginTop="@dimen/dp08"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_b4"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/textview1"/>

        <TextView
            android:id="@+id/tvGoodsSalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:layout_marginTop="@dimen/dp08"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/dp10"
            android:textColor="@color/color_b2"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/tvGoodsPrice"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:lines="1"
            android:ellipsize="end"
            android:text="货号："
            android:textColor="@color/color_b2"
            android:layout_alignBottom="@+id/imgsPre"
            android:layout_toEndOf="@+id/imgsPre"/>

        <TextView
            android:id="@+id/tvGoodsCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_b2"
            android:layout_alignBottom="@+id/imgsPre"
            android:layout_toEndOf="@+id/textview"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="102dp"
        android:background="@color/gallery_separation"/>

</LinearLayout>