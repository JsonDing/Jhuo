<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunma.publish.PublishManageActivity">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="@dimen/dp44"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布管理"
                android:textSize="@dimen/sp17"
                android:textColor="@color/color_b1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDelete"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:clickable="false"
            android:enabled="false"
            android:background="@color/white"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:enabled="false"
                android:paddingEnd="@dimen/dp10"
                android:paddingStart="@dimen/dp10"
                android:clickable="false"
                android:textColor="@color/color_b3"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvMaind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center"
        android:background="#FEECE8"
        android:paddingTop="@dimen/dp08"
        android:paddingBottom="@dimen/dp08"
        android:textColor="@color/color_b1"
        android:text="长按货品条目，可操作批量删除"/>

    <com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:progress_bar_color="@color/colorPrimary"
        app:guidance_text_color="@color/colorPrimary"
        app:guidance_view_bg_color="@color/transparent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcPublishManage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_a4"
            android:divider="@null"
            android:overScrollMode="never"
            android:paddingBottom="8dp"
            android:scrollbars="none"/>

    </com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout>
</LinearLayout>
