<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:visibility="gone"
        android:layout_marginBottom="6dp"
        android:textColor="@drawable/textview_selected_color"
        android:gravity="center"
        android:background="@drawable/bg_selector_gray_orange"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="6dp"/>

    <LinearLayout
        android:id="@+id/layoutAddTags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:background="@drawable/dotted_line"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="10dp">

        <View
            android:layout_width="@dimen/dp08"
            android:layout_height="@dimen/dp08"
            android:background="@drawable/add_more"/>

    </LinearLayout>

</RelativeLayout>