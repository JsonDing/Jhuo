<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/dp04"
            android:layout_height="@dimen/dp16"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:background="@color/color_a1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款订单详情"
            android:layout_marginStart="@dimen/dp15"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_b3"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@drawable/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgsGoods"
            android:layout_width="@dimen/dp106"
            android:layout_height="@dimen/dp106"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginEnd="@dimen/dp15"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textview1"
            android:layout_marginStart="@dimen/dp29"
            android:layout_marginTop="@dimen/dp15"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款编号："/>

        <TextView
            android:id="@+id/tvRefundCode"
            android:layout_marginTop="@dimen/dp15"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp13"
            android:layout_toEndOf="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textview2"
            android:layout_marginStart="@dimen/dp29"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"
            android:layout_below="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款类型："/>

        <TextView
            android:id="@+id/tvType"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textview2"
            android:layout_alignBottom="@+id/textview2"
            android:layout_toEndOf="@+id/textview2"/>

        <TextView
            android:id="@+id/textview3"
            android:layout_marginStart="@dimen/dp29"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"
            android:layout_below="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款金额："/>

        <TextView
            android:id="@+id/tvReturnMoney"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp13"
            android:layout_toEndOf="@+id/textview3"
            android:layout_below="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textview4"
            android:layout_marginStart="@dimen/dp29"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"
            android:layout_below="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间："/>

        <TextView
            android:id="@+id/tvApplyTime"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp13"
            android:layout_toEndOf="@+id/textview3"
            android:layout_below="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="@dimen/dp29"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_below="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注说明："/>

        <TextView
            android:id="@+id/tvReason"
            android:layout_marginTop="@dimen/dp20"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp13"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_toEndOf="@+id/textview4"
            android:layout_below="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp04"
            android:layout_height="@dimen/dp16"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:background="@color/color_a1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款凭证"
            android:layout_marginStart="@dimen/dp15"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view1"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_b3"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp01"
        android:background="@drawable/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageV1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp106"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"/>

        <ImageView
            android:id="@+id/imageV2"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp106"
            android:layout_marginStart="@dimen/dp10"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"/>

        <ImageView
            android:id="@+id/imageV3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/dp10"
            android:src="@drawable/default_pic"
            android:layout_height="@dimen/dp106"/>

    </LinearLayout>

</LinearLayout>