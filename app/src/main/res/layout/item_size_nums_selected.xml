<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp55">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/color_a4"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvGoodsSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L"
        android:textColor="@color/color_b1"
        android:textSize="@dimen/sp14"
        android:layout_marginStart="@dimen/dp15"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/layoutAddMore"
        android:layout_width="@dimen/dp36"
        android:layout_height="@dimen/dp28"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/layoutAdd"
        android:layout_marginEnd="@dimen/dp15"
        android:gravity="center"
        android:background="@drawable/bg_basket_nums_select_right">

        <ImageView
            android:layout_width="@dimen/dp11"
            android:layout_height="@dimen/dp11"
            android:clickable="false"
            android:src="@drawable/add_more"/>

    </LinearLayout>

    <TextView
        android:id="@+id/etGoodsNums"
        android:layout_width="@dimen/dp36"
        android:layout_height="@dimen/dp29"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/color_b1"
        android:textSize="@dimen/sp14"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/layoutAddMore"
        android:layout_marginEnd="@dimen/dp04"
        android:background="@color/color_a4"/>

    <LinearLayout
        android:id="@+id/layoutMinusMore"
        android:layout_width="@dimen/dp32"
        android:layout_height="@dimen/dp28"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/etGoodsNums"
        android:layout_marginEnd="@dimen/dp04"
        android:gravity="center"
        android:background="@drawable/bg_basket_nums_select_left">

        <ImageView
            android:layout_width="@dimen/dp11"
            android:layout_height="@dimen/dp11"
            android:clickable="false"
            android:src="@drawable/re_minus"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvGoodsRemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_b2"
        android:textSize="@dimen/sp10"
        android:text="120"
        android:layout_marginEnd="32dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/layoutMinusMore"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_b2"
        android:textSize="@dimen/sp10"
        android:text="库存："
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tvGoodsRemain"/>

    <LinearLayout
        android:id="@+id/layoutAdd"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp28"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp08"
        android:paddingEnd="@dimen/dp08"
        android:gravity="center"
        android:background="@drawable/btn_selector_orange">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:text="添加"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13"/>

    </LinearLayout>

</RelativeLayout>