<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp15"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginTop="@dimen/dp05"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/layoutSeeDetials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp10"
        android:paddingBottom="@dimen/dp10"
        android:paddingStart="@dimen/dp15"
        android:paddingEnd="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="@dimen/dp81"
            android:layout_height="@dimen/dp81"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp81"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/loName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_marginStart="@dimen/dp10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGoodsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.1"
                    android:textColor="@color/b1"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgSpecialOffer"
                    android:layout_width="@dimen/dp23"
                    android:layout_height="@dimen/dp13"
                    android:layout_marginTop="@dimen/dp02"
                    android:src="@drawable/label_special_offer" />

            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/loSpecialOffers"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="特价："
                            android:textColor="@color/b2"
                            android:textSize="@dimen/sp11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/b4"
                            android:textSize="@dimen/sp11" />

                        <TextView
                            android:id="@+id/tvGoodsPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/b4"
                            android:textSize="@dimen/sp11" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="售价："
                            android:textColor="@color/b2"
                            android:textSize="@dimen/sp11" />

                        <TextView
                            android:id="@+id/textview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/b2"
                            android:textSize="@dimen/sp11" />

                        <TextView
                            android:id="@+id/tvPrimePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/b2"
                            android:textSize="@dimen/sp11" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnLooksimilar"
                        android:layout_width="@dimen/dp68"
                        android:layout_height="@dimen/dp26"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp10"
                        android:background="@drawable/bg_button_orange"
                        android:text="找相似"
                        android:textColor="@color/b3"
                        android:textSize="13sp"
                        android:visibility="gone"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layoutDelete"
                    android:layout_width="@dimen/dp68"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp15"
                        android:layout_height="@dimen/dp15"
                        android:src="@drawable/trash" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/mOffSaleImg"
        android:visibility="invisible"
        android:layout_width="@dimen/dp28"
        android:layout_height="@dimen/dp28"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp15"
        android:src="@drawable/off_sale"/>

</android.support.v7.widget.CardView>
