<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="@dimen/dp44"
            android:text="订单详情"
            android:background="@color/white"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp17"/>

        <LinearLayout
            android:background="@color/white"
            android:gravity="center"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCance"
                android:layout_width="@dimen/dp72"
                android:layout_height="@dimen/dp28"
                android:text="取消订单"
                android:visibility="gone"
                android:background="@drawable/bg_button_gray"
                android:layout_marginEnd="@dimen/dp15"
                android:textColor="@color/color_b1"
                android:textSize="@dimen/sp13"/>

            <Button
                android:id="@+id/btnPay"
                android:layout_width="@dimen/dp72"
                android:layout_height="@dimen/dp28"
                android:layout_marginEnd="@dimen/dp15"
                android:text="去付款"
                android:visibility="gone"
                android:background="@drawable/bg_button_orange"
                android:textColor="@color/color_b3"
                android:textSize="@dimen/sp13"/>

            <Button
                android:id="@+id/btnNotSend"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp28"
                android:layout_marginEnd="@dimen/dp15"
                android:text="我要催单"
                android:visibility="gone"
                android:background="@drawable/bg_button_orange"
                android:textColor="@color/color_b3"
                android:textSize="@dimen/sp13"/>

            <Button
                android:id="@+id/btnApplyHelp"
                android:layout_width="@dimen/dp72"
                android:layout_height="@dimen/dp28"
                android:text="申请售后"
                android:visibility="gone"
                android:background="@drawable/bg_button_normal"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_b1"/>

            <Button
                android:id="@+id/btnOrderTrance"
                android:layout_width="@dimen/dp72"
                android:layout_height="@dimen/dp28"
                android:text="订单跟踪"
                android:visibility="gone"
                android:layout_marginStart="@dimen/dp10"
                android:background="@drawable/bg_button_normal"
                android:textSize="@dimen/sp12"
                android:layout_marginEnd="@dimen/dp15"
                android:textColor="@color/color_b1"/>
        </LinearLayout>


    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:background="@color/white">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp15"
                    android:text="订单号："
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/sp14"/>

                <TextView
                    android:id="@+id/tvOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/textview"
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/sp14"/>

                <TextView
                    android:id="@+id/tvOrderHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp15"
                    android:textColor="@color/color_b2"
                    android:textSize="@dimen/sp12"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:id="@+id/layoutTrace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dp14"
                    android:layout_height="@dimen/dp14"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:src="@drawable/expressage"/>

                <TextView
                    android:id="@+id/tvExpressStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_toEndOf="@id/imageView1"
                    android:text="包裹正在路上"
                    android:textColor="@color/color_b3"
                    android:textSize="@dimen/sp14"/>

                <ImageView
                    android:layout_width="@dimen/dp13"
                    android:layout_height="@dimen/dp13"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dp15"
                    android:src="@drawable/more_right_big"/>


                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvExpressStatus"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_toEndOf="@id/imageView1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_b2"
                    android:textSize="@dimen/sp11"/>

                <!--<TextView
                    android:id="@+id/tvHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvDay"
                    android:layout_below="@+id/imageView2"
                    android:layout_toEndOf="@+id/tvDay"
                    android:maxLines="1"
                    android:text="20:58:32"
                    android:textColor="@color/color_b2"
                    android:textSize="@dimen/sp11"/>-->

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp14"
                    android:layout_height="@dimen/dp14"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:src="@drawable/location"/>

                <TextView
                    android:id="@+id/tvReceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_toEndOf="@id/imageView"
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp39"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_toEndOf="@id/tvReceiver"
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/sp13"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvReceiver"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginBottom="@dimen/dp08"
                    android:layout_marginStart="40dp"
                    android:textColor="@color/color_b2"
                    android:textSize="@dimen/sp12"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/color_a4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/dp15"
                android:paddingStart="@dimen/dp15">

                <ImageView
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:src="@drawable/logo_sm"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp10"
                    android:text="J货运动分销平台"
                    android:textColor="@color/color_b1"
                    android:textSize="@dimen/sp12"/>
            </LinearLayout>

            <com.yunma.widget.MyListView
                android:id="@+id/lvOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_a4"
                android:divider="@null"
                android:scrollbars="none"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/dp15"
                android:paddingStart="@dimen/dp15"
                android:text="支付信息"
                android:textColor="@color/color_b1"
                android:textSize="@dimen/sp14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="152dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp15"
                        android:text="下单时间"
                        android:textColor="@color/color_b2"
                        android:textSize="@dimen/sp13"/>

                    <TextView
                        android:id="@+id/tvOrderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp12"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp15"
                        android:text="付款方式"
                        android:textColor="@color/color_b2"
                        android:textSize="@dimen/sp13"/>

                    <TextView
                        android:id="@+id/tvPayway"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp12"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp15"
                        android:text="订单金额"
                        android:textColor="@color/color_b2"
                        android:textSize="@dimen/sp13"/>

                    <TextView
                        android:id="@+id/tvOrderPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp12"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp15"
                        android:text="运费"
                        android:textColor="@color/color_b2"
                        android:textSize="@dimen/sp13"/>

                    <TextView
                        android:id="@+id/tvOrderExpress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp12"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvShouldPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp12"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:text="应付金额"
                        android:textColor="@color/color_b2"
                        android:textSize="@dimen/sp13"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp15"
                        android:text="实付金额"
                        android:textColor="@color/color_b2"
                        android:textSize="@dimen/sp13"/>

                    <TextView
                        android:id="@+id/tvRealPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b4"
                        android:textSize="@dimen/sp14"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp10"
                android:background="@color/color_a4"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
