<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dp40">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="@dimen/dp40"
        android:orientation="vertical">

        <TextView
            android:id="@id/tvGoodsSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp10"
            android:textSize="13sp"

            android:textColor="@color/color_b1"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginEnd="@dimen/dp12"
            android:background="@color/color_a4"/>

        <LinearLayout
            android:id="@+id/layoutRemove"
            android:layout_width="@dimen/dp38"
            android:layout_height="@dimen/dp38"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/dp14"
                android:layout_height="@dimen/dp14"
                android:src="@drawable/close_grey"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layoutMinusMore"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp28"
            android:layout_marginEnd="@dimen/dp01"
            android:gravity="center"
            android:background="@drawable/bg_basket_nums_select_left">

            <ImageView
                android:layout_width="@dimen/dp11"
                android:layout_height="@dimen/dp11"
                android:clickable="false"
                android:src="@drawable/re_minus"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvGoodsNums"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp29"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp14"
            android:text="1"
            android:layout_marginEnd="@dimen/dp02"
            android:layout_marginStart="@dimen/dp02"
            android:background="@drawable/fillet_gray_light"/>

        <LinearLayout
            android:id="@+id/layoutAddMore"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp28"
            android:gravity="center"
            android:background="@drawable/bg_basket_nums_select_right">

            <ImageView
                android:layout_width="@dimen/dp11"
                android:layout_height="@dimen/dp11"
                android:clickable="false"
                android:src="@drawable/add_more"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>