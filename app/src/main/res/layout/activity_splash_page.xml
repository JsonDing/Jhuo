<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_splash"
    tools:context="com.yunma.jhuo.general.SplashPageActivity">

    <LinearLayout
        android:layout_marginTop="128dp"
        android:layout_marginEnd="@dimen/dp36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <TextView
            android:id="@+id/tvSpWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:textColor="@color/b1"
            android:layout_marginTop="@dimen/dp22"
            android:layout_marginStart="@dimen/dp88"
            android:lineSpacingExtra="@dimen/dp04"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright ©2016 All rights reserved"
            android:textColor="@color/b2"
            android:textSize="@dimen/sp12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="云码创新体育发展有限公司提供技术服务"
            android:textColor="@color/b2"
            android:textSize="@dimen/sp10"
            android:layout_marginBottom="@dimen/dp10"
            android:id="@+id/textView5" />

    </LinearLayout>


</RelativeLayout>
