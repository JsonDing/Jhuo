<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:background="@color/tittle_bar">

        <RelativeLayout
            android:id="@+id/layoutBack"
            android:background="@color/white"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:src="@drawable/re_back" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:text="确认订单"
            android:gravity="center"
            android:paddingEnd="@dimen/dp44"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp17"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/envelope"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15">

                    <TextView
                        android:id="@+id/tvReceiver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Json"
                        android:textColor="@color/color_b1"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/tvReceiver"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp15"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="江苏省无锡市滨湖区高浪东路999号C1栋西侧206室"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_toStartOf="@+id/layoutSelectAddress"
                        android:layout_alignStart="@+id/tvReceiver"
                        android:layout_below="@+id/tvReceiver"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp12" />

                    <LinearLayout
                        android:id="@+id/layoutSelectAddress"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true">

                        <ImageView
                            android:layout_width="@dimen/dp18"
                            android:layout_height="@dimen/dp18"
                            android:src="@drawable/next"/>

                    </LinearLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tvAddLocation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp64"
                    android:text="添加地址"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@color/color_b2"
                    android:textSize="@dimen/sp20"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/envelope"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_a4"/>

            <!-- 购买 一个 款式 -->
            <RelativeLayout
                android:id="@+id/layoutSingleGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingEnd="@dimen/dp15"
                android:paddingStart="@dimen/dp15"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">

                <ImageView
                    android:id="@+id/imgSingleGoods"
                    android:layout_width="@dimen/dp86"
                    android:layout_height="@dimen/dp86"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_pic"/>

                <TextView
                    android:id="@+id/tvSingleGoodsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/color_b1"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp16"
                    android:layout_marginTop="3dp"
                    android:layout_alignTop="@+id/imgSingleGoods"
                    android:layout_toEndOf="@+id/imgSingleGoods"/>

                <TextView
                    android:id="@+id/tvSingleGoodsInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/color_b2"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/tvSingleGoodsName"
                    android:layout_toEndOf="@+id/imgSingleGoods"/>

                <TextView
                    android:id="@+id/tvSingleGoodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/color_b4"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_alignBottom="@+id/imgSingleGoods"
                    android:layout_toEndOf="@+id/imgSingleGoods"/>

                <TextView
                    android:id="@+id/tvNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/color_b1"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_alignBottom="@+id/imgSingleGoods"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>
            <!-- 购买 多个 款式 -->
            <LinearLayout
                android:id="@+id/layoutMultipleGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="52dp"
                android:padding="@dimen/dp15"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.lzy.ninegrid.NineGridView
                    android:id="@+id/nineGrid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    app:ngv_singleImageRatio="1"
                    app:ngv_singleImageSize="81dp"
                    app:ngv_maxSize="3"
                    app:ngv_mode="grid"
                    app:ngv_gridSpacing="4dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/dp24"
                    android:src="@drawable/wait"
                    android:paddingEnd="@dimen/dp08"
                    android:paddingStart="@dimen/dp08"
                    />

                <LinearLayout
                    android:id="@+id/layoutLookAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="52dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/layoutTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/dp22"
                        android:gravity="center"
                        android:textColor="@color/color_b1"
                        android:textSize="@dimen/sp16"/>

                    <ImageView
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:layout_marginStart="@dimen/dp06"
                        android:src="@drawable/next"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:id="@+id/layoutFavorableInfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="优惠信息"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"/>

                <TextView
                    android:id="@+id/tvFavorableInfos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_alignEnd="@+id/imageView2"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:src="@drawable/next"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:id="@+id/layoutUnNeedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="去鞋盒服务"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="不支持"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_alignEnd="@+id/imageView4"/>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:src="@drawable/next"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:id="@+id/layoutCarriageExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="运费总计"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"/>

                <TextView
                    android:id="@+id/tvExpressCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_alignEnd="@+id/imageView1"/>

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:src="@drawable/next"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:id="@+id/layoutInvoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="发票信息"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="开票时间每月10-15号"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_alignEnd="@+id/imageView"/>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:src="@drawable/next"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp15"
                    android:text="买家留言"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/color_b1"/>

                <EditText
                    android:id="@+id/etRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="选填：对本次交易的备注信息"
                    android:textSize="@dimen/sp14"
                    android:maxLines="3"
                    android:paddingTop="@dimen/dp15"
                    android:paddingBottom="@dimen/dp15"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:gravity="top"
                    android:background="@color/white"
                    android:textColor="@color/color_b2"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_toEndOf="@+id/textview"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_weight="1"
                android:background="@color/color_a4"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp10"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:text="商 品 件 数："
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/color_b1"/>

                <TextView
                    android:id="@+id/tvGoodsNums"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp10"
                    android:textSize="@dimen/sp13"
                    android:text="4件"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_b4"/>

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:text="商 品 总 额："
                    android:layout_marginTop="@dimen/dp07"
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/color_b1"
                    android:layout_below="@+id/textview2"/>

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp07"
                    android:textSize="@dimen/sp13"
                    android:text="￥1000.00"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_b4"
                    android:layout_below="@+id/textview2"/>

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp07"
                    android:text="运 费 总 计："
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/color_b1"
                    android:layout_below="@+id/textview3"/>

                <TextView
                    android:id="@+id/tvExpressPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp07"
                    android:textSize="@dimen/sp15"
                    android:text="-￥10.00"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_b4"
                    android:layout_below="@+id/textview3"/>

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp15"
                    android:paddingEnd="@dimen/dp15"
                    android:paddingBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp07"
                    android:text="优惠(或去鞋盒)："
                    android:textSize="@dimen/sp13"
                    android:textColor="@color/color_b1"
                    android:layout_below="@+id/textview4"/>

                <TextView
                    android:id="@+id/tvFavorableMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp07"
                    android:paddingBottom="@dimen/dp10"
                    android:textSize="@dimen/sp15"
                    android:text="-￥10.00"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/color_b4"
                    android:layout_below="@+id/textview4"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:background="@color/color_a4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp48"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付金额："
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/color_b1"/>

                <TextView
                    android:id="@+id/tvAllTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp15"
                    android:text="$980"
                    android:textColor="@color/color_b4"/>

                <TextView
                    android:id="@+id/tvSubmitOrder"
                    android:layout_width="107dp"
                    android:layout_height="match_parent"
                    android:text="提交订单"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/dp20"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/dp16"
                    android:paddingEnd="@dimen/sp17"
                    android:textSize="@dimen/sp15"
                    android:background="@color/color_a1"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
