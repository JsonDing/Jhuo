<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:background="@color/tittle_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"
            android:gravity="center"
            android:background="@color/white"
            android:id="@+id/layoutBack">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:src="@drawable/re_back"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请退货详情"
                android:textSize="@dimen/sp17"
                android:textColor="@color/color_b1"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layoutNews"
            android:paddingEnd="@dimen/dp10"
            android:background="@color/white"
            android:layout_width="@dimen/dp54"
            android:layout_height="@dimen/dp44">


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/color_a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/default_pic"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java软件工程师在android xml 布局文件中"
            android:maxLines="2"
            android:ems="8"
            android:ellipsize="end"
            android:textSize="@dimen/sp15"
            android:textIsSelectable="true"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java软件工程师"
            android:maxLines="2"
            android:textSize="@dimen/sp13"
            android:textColor="@color/color_b2"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="4dp"
            android:textIsSelectable="true"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥189.0"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_b4"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货原因："
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp14"/>

        <com.yunma.widget.NiceSpinner
            android:id="@+id/spinner"
            android:textColor="@color/color_b1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textTint="@color/color_b1"
            app:arrowTint="@color/color_b1"
            android:textSize="@dimen/sp14"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/color_a4"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etDetials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="(选填) 请您描述详细问题"
            android:gravity="top"
            android:lines="3"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:textColorHint="@color/color_b2"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp12"/>

        <TextView
            android:id="@+id/tvCanInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/60"
            android:layout_gravity="bottom|right"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp12"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginBottom="@dimen/dp10"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传凭证（最多三张）"
        android:textColor="@color/color_b2"
        android:textSize="@dimen/sp12"
        android:paddingTop="@dimen/dp05"
        android:paddingStart="@dimen/dp15"
        android:paddingEnd="@dimen/dp15"
        android:paddingBottom="@dimen/dp15"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_a4"
        android:id="@+id/view5"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:text="提 交"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="#de9e04"/>

</LinearLayout>
