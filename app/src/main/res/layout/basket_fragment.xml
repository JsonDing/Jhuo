<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <View
            android:background="@color/white"
            android:layout_width="@dimen/dp44"
            android:layout_height="@dimen/dp44"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textSize="@dimen/sp17"
                android:textColor="@color/color_b1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEdit"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:paddingEnd="@dimen/dp15"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_b1"
                android:textSize="@dimen/sp15"
                android:text="编辑"
                android:clickable="false" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutComplete"
            android:paddingEnd="@dimen/dp15"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_b1"
                android:textSize="@dimen/sp15"
                android:text="完成"
                android:clickable="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
                android:id="@+id/layoutNotNull"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/layoutTopMind"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp39"
                    android:gravity="center_vertical"
                    android:background="#FFEDCB"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/dp13"
                        android:layout_height="@dimen/dp16"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp20"
                        android:src="@drawable/inform"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/color_b1"
                        android:layout_toEndOf="@+id/imageView"
                        android:text="新入库存商品1200件，点击查看"
                        android:paddingEnd="@dimen/dp10"
                        android:paddingStart="@dimen/dp10"/>

                    <LinearLayout
                        android:id="@+id/layoutClose"
                        android:layout_width="@dimen/dp39"
                        android:layout_alignParentEnd="true"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/dp39">

                        <ImageView
                            android:layout_width="@dimen/dp10"
                            android:layout_height="@dimen/dp10"
                            android:src="@drawable/close_shop_sm"/>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp10"
                    android:background="@color/color_a4"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/lvBasket"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/color_a4"
                    android:fadingEdge="none"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp58"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/layoutSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgSelectAll"
                            android:layout_width="@dimen/dp14"
                            android:layout_height="@dimen/dp14"
                            android:layout_marginStart="@dimen/dp15"
                            android:background="@drawable/unchecked"/>

                        <TextView
                            android:id="@+id/textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全选"
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"
                            android:layout_marginStart="@dimen/dp10"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/layoutSelect"
                        android:layout_marginStart="@dimen/dp78"
                        android:layout_marginTop="@dimen/dp10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已选"
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"/>

                        <TextView
                            android:id="@+id/tvHasSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 0 "
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="件"
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/layoutSelect"
                        android:layout_marginStart="@dimen/dp78"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计"
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"/>

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="元"
                            android:textColor="@color/color_b1"
                            android:textSize="@dimen/sp13"/>

                    </LinearLayout>



                    <Button
                        android:id="@+id/btnGoPay"
                        android:layout_width="@dimen/dp81"
                        android:layout_height="@dimen/dp32"
                        android:text="去结算"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/btn_selector_orange"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"/>

                    <Button
                        android:id="@+id/btnGoDetele"
                        android:layout_width="@dimen/dp81"
                        android:layout_height="@dimen/dp32"
                        android:text="删除"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/btn_selector_orange"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dp15"/>

                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/color_a4"/>

            </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutNull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/dp05"
            android:gravity="center_horizontal"
            android:background="@color/color_a4">

            <ImageView
                android:layout_width="@dimen/dp56"
                android:layout_height="@dimen/dp56"
                android:src="@drawable/shopping_cart_margin"
                android:layout_marginTop="@dimen/dp36"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车还是空的"
                android:textSize="@dimen/sp15"
                android:textColor="@color/color_b1"
                android:layout_marginTop="@dimen/dp28"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赶紧去看看有哪些想买的"
                android:textSize="@dimen/sp13"
                android:textColor="@color/color_b2"
                android:layout_marginTop="@dimen/dp10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:layout_marginTop="@dimen/dp44"
                android:background="@color/color_a4">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    android:text="大家都爱买"
                    android:textSize="@dimen/sp13"/>

                <ImageView
                    android:layout_width="@dimen/dp36"
                    android:layout_height="@dimen/dp11"
                    android:src="@drawable/decorate_right"
                    android:layout_alignTop="@+id/text1"
                    android:layout_toStartOf="@+id/text1"
                    android:layout_marginEnd="@dimen/dp15"
                    android:id="@+id/decor_content_parent" />

                <ImageView
                    android:layout_width="@dimen/dp36"
                    android:layout_height="@dimen/dp11"
                    android:src="@drawable/decorate_left"
                    android:layout_alignTop="@+id/text1"
                    android:layout_toEndOf="@+id/text1"
                    android:layout_marginStart="@dimen/dp15"
                    android:id="@+id/imageView1" />

            </RelativeLayout>

            <com.yunma.widget.MyGirdView
                android:id="@+id/gvIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:numColumns="2"
                android:divider="@null"
                android:background="@color/white"/>


        </LinearLayout>



    </ScrollView>

</LinearLayout>