<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="明日上新预告"
            android:textSize="@dimen/sp12"/>

        <LinearLayout
            android:id="@+id/layoutLookAll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp08"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看全部"
                android:clickable="false"
                android:textSize="@dimen/sp12"
                android:textColor="@color/color_b2"/>

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/next"/>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp11"
            android:src="@drawable/decorate_right"
            android:layout_toStartOf="@+id/text1"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dp15"
            android:id="@+id/decor_content_parent" />

        <ImageView
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp11"
            android:src="@drawable/decorate_left"
            android:layout_toEndOf="@+id/text1"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/dp15"
            android:id="@+id/imageView1" />

    </RelativeLayout>

    <com.yunma.widget.NestListView
        android:id="@+id/nestlistview"
        android:layout_marginBottom="@dimen/dp10"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>