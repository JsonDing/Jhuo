<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_margin="@dimen/dp08"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textIsSelectable="true"
                android:layout_marginStart="@dimen/dp05"
                android:layout_marginEnd="@dimen/dp05"
                android:ellipsize="end"
                android:textColor="@color/color_b1"
                android:layout_marginTop="@dimen/dp06"
                android:textSize="@dimen/sp11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp05"
                android:layout_marginTop="@dimen/dp05"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvGoodsSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp10"
                    android:layout_marginStart="@dimen/dp05"
                    android:layout_marginEnd="@dimen/dp05"
                    android:lines="1"
                    android:text="尺码："
                    android:textColor="@color/color_b1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp05"
                android:layout_marginTop="@dimen/dp05"
                android:orientation="horizontal">

                 <TextView
                     android:id="@+id/tvGoodsPrice"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/sp11"
                     android:layout_marginStart="@dimen/dp05"
                     android:layout_marginEnd="@dimen/dp05"
                     android:lines="1"
                     android:text="折扣价:"
                     android:textColor="@color/color_b4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp11"
                    android:text="吊牌价:"
                    android:lines="1"
                    android:layout_marginStart="@dimen/dp05"
                    android:layout_marginEnd="@dimen/dp05"
                    android:textColor="@color/color_b2"
                    android:id="@+id/tvOriginalPrice"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>