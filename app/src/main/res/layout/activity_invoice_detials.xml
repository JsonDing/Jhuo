<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="@dimen/dp44"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑增票"
                android:textSize="@dimen/sp17"
                android:textColor="@color/color_b1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDel"
            android:layout_width="@dimen/dp44"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:src="@drawable/re_delete"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_weight="1"
        android:background="@color/color_a4"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:background="@color/color_a4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgStatusLogo"
                    android:layout_width="@dimen/dp22"
                    android:layout_height="@dimen/dp22"
                    android:layout_marginStart="@dimen/dp15"
                    android:src="@drawable/be_defeated"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人增票审核中"
                    android:layout_marginStart="@dimen/dp15"
                    android:textColor="@color/color_b1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:text="单位名称："
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp15"
                        android:paddingEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etCompany"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:textColor="@color/color_b2"
                        android:layout_marginEnd="@dimen/dp15"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/color_a4"
                    android:layout_marginStart="@dimen/dp15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:gravity="center_vertical"
                        android:text="纳税人识别号："
                        android:paddingStart="@dimen/dp15"
                        android:paddingEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etRatepayer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:textColor="@color/color_b2"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/color_a4"
                    android:layout_marginStart="@dimen/dp15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:text="注册地址："
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp15"
                        android:paddingEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etRegisterAddress"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/dp15"
                        android:layout_height="@dimen/dp40"
                        android:textColor="@color/color_b2"
                        android:background="@color/white"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/color_a4"
                    android:layout_marginStart="@dimen/dp15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:gravity="center_vertical"
                        android:text="注册电话："
                        android:paddingStart="@dimen/dp15"
                        android:paddingEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etRegisterPhone"
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp15"
                        android:layout_height="@dimen/dp40"
                        android:textColor="@color/color_b2"
                        android:background="@color/white"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/color_a4"
                    android:layout_marginStart="@dimen/dp15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:text="开户银行："
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/dp15"
                        android:paddingEnd="@dimen/dp15"
                        android:textColor="@color/color_b1"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etRegisterBank"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp40"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:layout_marginEnd="@dimen/dp15"
                        android:textColor="@color/color_b2"
                        android:textSize="14sp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp0.5"
                    android:background="@color/color_a4"
                    android:layout_marginStart="@dimen/dp15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:text="银行账户："
                        android:paddingStart="@dimen/dp15"
                        android:paddingEnd="@dimen/dp15"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_b1"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etRegisterAccount"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/dp15"
                        android:layout_height="@dimen/dp40"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_b2"
                        android:background="@color/white"
                        android:textSize="14sp"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp10"
                    android:background="@color/color_a4"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginEnd="@dimen/dp15"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageOne"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/dp81"
                        android:src="@drawable/default_pic"/>

                    <View
                        android:layout_width="@dimen/dp05"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>

                    <ImageView
                        android:id="@+id/imageTwo"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/dp81"
                        android:src="@drawable/default_pic"/>
                    <View
                        android:layout_width="@dimen/dp05"
                        android:layout_height="match_parent"
                        android:background="@color/white"/>

                    <ImageView
                        android:id="@+id/imageThree"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_height="@dimen/dp81"
                        android:src="@drawable/default_pic"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnUpdata"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:text="更新"
        android:background="@drawable/color_deep_orange"
        android:textColor="@color/white"
        android:textSize="15sp"/>

</LinearLayout>
