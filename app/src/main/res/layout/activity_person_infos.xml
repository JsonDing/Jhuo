<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="@dimen/dp44"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人资料"
                android:textSize="@dimen/sp17"
                android:textColor="@color/b1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:text="保存"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/b3"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp76"
        android:background="@color/white">

        <com.yunma.widget.CircleImageView
            android:id="@+id/imgPhoto"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:src="@drawable/default_photo"/>

        <LinearLayout
            android:id="@+id/layoutEditPhoto"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp28"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改头像"
                android:textSize="@dimen/sp14"
                android:textColor="@color/b2"/>

            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp13"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/more_right_big"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="@color/b2"
            android:textSize="@dimen/sp14"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:src="@drawable/default_photo"/>

        <LinearLayout
            android:layout_width="@dimen/dp148"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp15"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center_vertical"
                android:background="@null"
                android:lines="1"
                android:textSize="@dimen/sp14"
                android:textColor="@color/b1"/>

            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp13"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/more_right_big"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="@dimen/dp15"
        android:background="@color/a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="@dimen/sp14"
            android:textColor="@color/b2"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:src="@drawable/default_photo"/>

        <LinearLayout
            android:layout_width="@dimen/dp148"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp15"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="end|center_vertical"
                android:background="@null"
                android:textSize="@dimen/sp14"
                android:textColor="@color/b1"/>

            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp13"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/more_right_big"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="@dimen/dp15"
        android:background="@color/a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q Q"
            android:textSize="@dimen/sp14"
            android:textColor="@color/b2"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:src="@drawable/default_photo"/>

        <LinearLayout
            android:id="@+id/layoutQq"
            android:layout_width="@dimen/dp148"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/dp15"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etQq"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:gravity="end|center_vertical"
                android:background="@null"
                android:textSize="@dimen/sp14"
                android:textColor="@color/b1"/>

            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp13"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/more_right_big"/>

        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="@dimen/dp15"
        android:background="@color/a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名"
            android:textColor="@color/b2"
            android:textSize="@dimen/sp14"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp15"
            android:src="@drawable/default_photo"/>

        <LinearLayout
            android:layout_width="@dimen/dp148"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:layout_marginEnd="@dimen/dp15"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tvRealName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="未设置"
                android:lines="1"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/sp14"
                android:textColor="@color/b2"/>

            <ImageView
                android:layout_width="@dimen/dp13"
                android:layout_height="@dimen/dp13"
                android:layout_marginStart="@dimen/dp15"
                android:src="@drawable/more_right_big"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/a4"/>

    <View
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"/>

</LinearLayout>
