<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="375dp"
    android:background="@drawable/hint_login">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/color_b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp180"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ: "
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color_b1"/>

        <TextView
            android:id="@+id/tvQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3252292720"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color_a1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本平台暂为邀请制 注册事宜请咨询客服"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dp18"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_b1"/>

    <Button
        android:id="@+id/btnKnow"
        android:layout_width="272dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="我知道了"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/dp16"
        android:background="@drawable/btn_selector_orange"
        android:layout_height="@dimen/dp44"/>

</RelativeLayout>

</LinearLayout>