<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp06"
        android:background="@color/a4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp03"
            android:layout_height="match_parent"
            android:background="@color/a4"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="@dimen/dp06"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pic"/>

            <FrameLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgSpecialOffer"
                    android:layout_width="@dimen/dp23"
                    android:layout_height="@dimen/dp13"
                    android:layout_marginStart="@dimen/dp05"
                    android:layout_marginTop="@dimen/dp13"
                    android:src="@drawable/label_special_offer"/>

                <TextView
                    android:id="@+id/tvGoodsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:paddingStart="@dimen/dp05"
                    android:paddingEnd="@dimen/dp05"
                    android:ellipsize="end"
                    android:textColor="@color/b1"
                    android:layout_marginTop="@dimen/dp10"
                    android:textSize="@dimen/sp12"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp06"
                android:paddingStart="@dimen/dp05"
                android:paddingEnd="@dimen/dp05"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ï¿¥ "
                    android:textColor="@color/b4"
                    android:textSize="@dimen/sp10"/>

                <TextView
                    android:id="@+id/tvGoodsPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:text="0.00"
                    android:textColor="@color/b4"/>

                <TextView
                    android:id="@+id/tvSaleNums"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp11"
                    android:text="0"
                    android:textColor="@color/b2"
                    android:layout_height="wrap_content"
                    android:gravity="right"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/dp03"
            android:layout_height="match_parent"
            android:background="@color/a4"/>

    </LinearLayout>

</LinearLayout>