<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffffff"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/shade"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_layout_item_white"
            android:layout_marginStart="@dimen/dp36"
            android:layout_marginEnd="@dimen/dp36"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/color_b1"/>

                <LinearLayout
                    android:id="@+id/layoutClose"
                    android:layout_width="@dimen/dp36"
                    android:layout_height="@dimen/dp36"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp10">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/close"/>

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="36dp"
                android:orientation="horizontal"
                android:paddingEnd="15dp"
                android:paddingStart="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/input_account"
                    android:src="@drawable/name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:text="@string/account"
                    android:textColor="@color/color_b2"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/etLoginName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:background="@null"
                    android:hint="请输入帐号..."
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:padding="@dimen/dp10"
                    android:singleLine="true"
                    android:textColor="@color/color_b1"
                    android:textColorHint="@color/color_b2"
                    android:textCursorDrawable="@null"
                    android:textSize="13sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/input_passwd"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/password"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/passwd"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:textColor="@color/color_b2"
                    android:layout_marginStart="16dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/etPasswd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textCursorDrawable="@null"
                        android:inputType="textPassword"
                        android:layout_marginStart="15dp"
                        android:padding="@dimen/dp10"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_b1"
                        android:background="@null"
                        android:singleLine="true"
                        android:hint="请输入密码..."
                        android:imeOptions="actionGo"
                        android:textColorHint="#c2c2c2"
                        android:textSize="13sp"/>

                    <View
                        android:id="@+id/viewPasswd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"/>

                </FrameLayout>

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c2c2c2"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="18dp"
                android:clickable="false"
                android:enabled="false"
                android:background="@drawable/btn_selector_orange"
                android:text="@string/login"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/dp18"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ckIsAutoLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="自动登录"
                    android:textSize="12sp"
                    android:checked="true"
                    android:paddingStart="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    style="@style/OrangeCheckBoxTheme"
                    android:textColor="@color/color_b1"
                    android:layout_gravity="end"
                    android:layout_marginStart="30dp"/>

                <TextView
                    android:id="@+id/tvForgetPasswd"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/forget_passwd"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/color_b1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="30dp"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
