<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view1"
            android:layout_width="2.5dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@color/color_a4"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                 <ImageView
                     android:id="@+id/imgGoods"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:scaleType="fitXY"
                     android:src="@drawable/default_pic"/>

                <ImageView
                    android:id="@+id/imgSoldOut"
                    android:layout_width="@dimen/dp72"
                    android:layout_height="@dimen/dp72"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:src="@drawable/sold_out"/>

                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新品"
                    android:paddingStart="@dimen/dp04"
                    android:paddingEnd="@dimen/dp04"
                    android:paddingTop="@dimen/dp02"
                    android:paddingBottom="@dimen/dp02"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp11"
                    android:background="@color/color_b3"/>

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvGoodsName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:textIsSelectable="true"
                    android:layout_marginStart="@dimen/dp05"
                    android:layout_marginEnd="@dimen/dp05"
                    android:ellipsize="end"
                    android:textColor="@color/color_b1"
                    android:layout_marginTop="@dimen/dp05"
                    android:textSize="@dimen/sp12"/>

                <com.yunma.widget.FlowTagLayout
                    android:id="@+id/tagSize"
                    android:layout_marginStart="@dimen/dp05"
                    android:layout_marginEnd="@dimen/dp05"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp44"
                    android:layout_marginBottom="@dimen/dp10">

                    <TextView
                        android:id="@+id/tvSalePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp11"
                        android:layout_marginStart="@dimen/dp05"
                        android:layout_marginEnd="@dimen/dp05"
                        android:layout_marginTop="@dimen/dp06"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="@dimen/dp06"
                        android:textColor="@color/color_b2"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvYunmaPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp14"
                            android:layout_marginStart="@dimen/dp05"
                            android:layout_marginEnd="@dimen/dp05"
                            android:gravity="bottom"
                            android:textColor="@color/color_b4"/>

                        <TextView
                            android:layout_width="@dimen/dp15"
                            android:layout_height="@dimen/dp15"
                            android:text="减"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:background="@color/color_b4"
                            android:textColor="@color/white"
                            android:layout_marginStart="@dimen/dp05"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/dp10"
                        android:layout_marginEnd="@dimen/dp05"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="仅剩 "
                            android:textSize="11sp"
                            android:textColor="@color/color_b2"/>

                        <TextView
                            android:id="@+id/tvRemainNums"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/color_b4"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" 件"
                            android:textSize="11sp"
                            android:textColor="@color/color_b2"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="2.5dp"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@color/color_a4"/>

    </LinearLayout>

</FrameLayout>

