<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <View
        android:id="@+id/view1"
        android:layout_width="2.5dp"
        android:layout_height="match_parent"
        android:background="@color/a4"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgGoods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/default_pic" />

            <View
                android:visibility="gone"
                android:layout_width="@dimen/dp64"
                android:layout_height="@dimen/dp64"
                android:layout_gravity="center"
                android:background="@drawable/sold_out"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp05"
                android:layout_marginStart="@dimen/dp05"
                android:layout_marginTop="@dimen/dp05"
                android:ellipsize="end"
                android:lines="2"
                android:textColor="@color/b1"
                android:textIsSelectable="true"
                android:textSize="@dimen/sp12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:layout_marginBottom="@dimen/dp10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp05"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp05"
                        android:layout_marginStart="@dimen/dp05"
                        android:gravity="bottom"
                        android:text="￥"
                        android:textColor="@color/b4"
                        android:textSize="@dimen/sp11" />

                    <TextView
                        android:id="@+id/tvYunmaPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp05"
                        android:gravity="bottom"
                        android:text="0.00"
                        android:textColor="@color/b4"
                        android:textSize="@dimen/sp10" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvNums"
                        android:text="0"
                        android:textColor="@color/b2"
                        android:textSize="11sp"
                        android:layout_marginEnd="@dimen/dp05"
                        android:layout_marginStart="@dimen/dp05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="人想购买"
                        android:textColor="@color/b2"
                        android:textSize="11sp"
                        android:layout_marginEnd="@dimen/dp05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imgsLike"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginStart="@dimen/dp10"
                    android:src="@drawable/like_yellow"
                    android:orientation="horizontal"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="2.5dp"
        android:layout_height="match_parent"
        android:background="@color/a4"
        android:visibility="gone" />

</LinearLayout>


