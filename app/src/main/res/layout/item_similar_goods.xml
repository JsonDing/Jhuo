<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="@dimen/dp86"
            android:layout_height="@dimen/dp86"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:src="@drawable/default_pic"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp12"
            android:textStyle="bold"
            android:maxLines="2"
            android:layout_toEndOf="@+id/imgGoods"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginEnd="@dimen/dp15"
            android:textColor="@color/color_b1"/>


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGoodsName"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/dp10"
            android:layout_alignStart="@+id/tvGoodsName"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="代理价："
                android:textSize="@dimen/sp12"
                android:maxLines="2"
                android:textColor="@color/color_b2"/>

            <TextView
                android:id="@+id/tvCurrPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/sp12"
                android:maxLines="1"
                android:layout_marginStart="@dimen/dp05"
                android:textColor="@color/color_b4"/>

            <TextView
                android:id="@+id/tvOriPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥999"
                android:textSize="@dimen/sp12"
                android:maxLines="1"
                android:layout_marginStart="15dp"
                android:textColor="@color/color_b2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/dp10"
            android:layout_alignStart="@+id/tvGoodsName"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月销量："
                android:textSize="@dimen/sp12"
                android:maxLines="1"
                android:textColor="@color/color_b2"/>

            <TextView
                android:id="@+id/tvMonthNums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:textSize="@dimen/sp11"
                android:maxLines="1"
                android:layout_marginStart="@dimen/dp05"
                android:textColor="@color/color_b3"/>

        </LinearLayout>


       <!-- <TextView
            android:id="@+id/tvOriPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥999"
            android:textSize="@dimen/sp12"
            android:maxLines="1"
            android:layout_marginStart="15dp"
            android:textColor="@color/color_b2"
            android:layout_below="@+id/tvGoodsName"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toEndOf="@+id/tvCurrPrice" />-->

       <!-- <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代理价："
            android:textSize="@dimen/sp12"
            android:maxLines="2"
            android:textColor="@color/color_b2"
            android:layout_alignBaseline="@+id/tvCurrPrice"
            android:layout_alignBottom="@+id/tvCurrPrice"
            android:layout_alignStart="@+id/tvGoodsName"/>-->

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginStart="@dimen/dp116"
        android:background="@color/color_a5"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:background="@color/color_a4"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp03"
            android:src="@drawable/under_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_b2"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp10"
            android:text="更多好货在大仓"/>

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp03"
            android:src="@drawable/under_right"/>

    </LinearLayout>
</LinearLayout>

