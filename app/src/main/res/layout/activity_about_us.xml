<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:paddingEnd="10dp"
            android:layout_width="@dimen/dp44"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:paddingEnd="@dimen/dp44"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于我们"
                android:textSize="@dimen/sp17"
                android:textColor="@color/b1"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/dp51"
            android:layout_height="@dimen/dp51"
            android:layout_marginTop="@dimen/dp88"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/nav_logo"/>

        <RelativeLayout
            android:layout_below="@+id/imgLogo"
            android:layout_marginTop="@dimen/dp24"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:background="@color/white">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_centerInParent="true"
                android:text="J 货 有 好 货"
                android:textStyle="bold"
                android:textSize="@dimen/sp13"/>

            <ImageView
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp11"
                android:src="@drawable/decorate_right"
                android:layout_toStartOf="@+id/text1"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dp15"
                android:id="@+id/decor_content_parent" />

            <ImageView
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp11"
                android:src="@drawable/decorate_left"
                android:layout_toEndOf="@+id/text1"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp15"
                android:id="@+id/imageView1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textview"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright ©2016 All right reserved"
            android:textColor="@color/b2"
            android:textSize="@dimen/sp12"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/textView5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无锡云码创新体育发展有限公司"
            android:textColor="@color/b2"
            android:textSize="@dimen/sp11"
            android:layout_marginBottom="@dimen/dp15"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/textView5" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮箱：codeinclould@gmail.com  QQ:3529448375"
            android:textColor="@color/b1"
            android:textSize="@dimen/sp12"
            android:layout_marginBottom="6dp"
            android:layout_above="@+id/textview"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/tvCurrentVersion"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V1.0.0"
            android:textStyle="bold"
            android:layout_above="@+id/textView1"
            android:textColor="@color/b1"
            android:textSize="@dimen/sp14"/>

    </RelativeLayout>


</LinearLayout>
