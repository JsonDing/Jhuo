<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp15">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java软件工程师在android xml 布局文件中"
            android:maxLines="2"
            android:ems="8"
            android:ellipsize="end"
            android:textSize="@dimen/sp15"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java软件工程师"
            android:maxLines="2"
            android:textSize="@dimen/sp13"
            android:textColor="@color/color_b2"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥189.0"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_b4"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货原因："
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp14"/>

        <com.yunma.widget.NiceSpinner
            android:id="@+id/spinner"
            android:textColor="@color/color_b1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:textTint="@color/color_b1"
            app:arrowTint="@color/color_b1"
            android:textSize="@dimen/sp14"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginStart="@dimen/dp15"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/color_a4"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etDetials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="(选填) 请您描述详细问题"
            android:gravity="top"
            android:lines="4"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:textColorHint="@color/color_b2"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp12"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"/>

    <LinearLayout
        android:id="@+id/layoutImgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp05"
        android:paddingBottom="@dimen/dp05"
        android:paddingEnd="@dimen/dp15"
        android:paddingStart="@dimen/dp15"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imgsOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dp05"
            android:src="@drawable/add_image"/>

        <ImageView
            android:id="@+id/imgsTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/dp05"
            android:src="@drawable/add_image"/>

        <ImageView
            android:id="@+id/imgsThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:scaleType="fitXY"
            android:src="@drawable/add_image"/>

        <ImageView
            android:id="@+id/imgsAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/add_image"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传凭证（最多三张）"
        android:textColor="@color/color_b2"
        android:textSize="@dimen/sp12"
        android:paddingTop="@dimen/dp05"
        android:paddingStart="@dimen/dp15"
        android:paddingEnd="@dimen/dp15"
        android:paddingBottom="@dimen/dp15"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_a4"
        android:id="@+id/view5"/>

</LinearLayout>