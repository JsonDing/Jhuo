<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color_a4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp06"
        android:background="@color/color_a4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_a4"
        android:orientation="horizontal">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp03"
            android:layout_height="wrap_content"
            android:background="@color/color_a4"/>

        <LinearLayout
            android:id="@+id/layoutClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp05"
            android:orientation="vertical">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgGoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_pic"/>
                
                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp22"
                    android:text="1"
                    android:paddingBottom="@dimen/dp04"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp12"
                    android:background="@drawable/subscript_1"/>
            </RelativeLayout>
            
            <TextView
                android:id="@+id/tvGoodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_value"
                android:lines="2"
                android:textIsSelectable="true"
                android:paddingStart="@dimen/dp05"
                android:paddingEnd="@dimen/dp05"
                android:ellipsize="end"
                android:textColor="@color/color_b1"
                android:layout_marginTop="@dimen/dp10"
                android:textSize="@dimen/sp12"/>

            <LinearLayout
                android:id="@+id/layoutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp03"
                android:paddingStart="@dimen/dp05"
                android:paddingEnd="@dimen/dp05"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCurrPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:text="￥999.00"
                    android:textColor="@color/color_b4"/>

                <TextView
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/sp10"
                    android:layout_marginStart="@dimen/dp18"
                    android:textColor="@color/color_b2"
                    android:text="￥1999.00"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp11"
                android:gravity="right"
                android:text="销售量 320"
                android:paddingStart="@dimen/dp05"
                android:paddingEnd="@dimen/dp05"
                android:layout_marginTop="@dimen/dp03"
                android:textColor="@color/color_b2"
                android:id="@+id/tvSaleNums"/>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="@dimen/dp03"
            android:layout_height="wrap_content"
            android:background="@color/color_a4"/>

    </LinearLayout>
</LinearLayout>