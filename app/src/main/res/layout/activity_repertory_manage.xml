<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="@dimen/dp44"
            android:background="@color/white"
            android:gravity="center"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp18"
                android:layout_height="@dimen/dp18"
                android:clickable="false"
                android:src="@drawable/re_back" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="库存管理"
                android:textSize="@dimen/sp17"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:clickable="false"
                android:paddingEnd="@dimen/dp44"
                android:textColor="@color/color_b1"/>

            <LinearLayout
                android:id="@+id/layoutShelve"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="end"
                android:clickable="false"
                android:enabled = "false"
                android:paddingEnd="@dimen/dp15"
                android:paddingStart="@dimen/dp15"
                android:background="@color/white"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvShelve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下架"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:clickable="false"
                    android:textColor="@color/color_b3"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/color_a4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp36"
            android:background="@drawable/bg_layout_item_white"
            android:gravity="center">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:id="@+id/etHint"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerInParent="true"
                   android:clickable="false"
                   android:focusable="false"
                   android:gravity="center">

                   <ImageView
                       android:layout_width="@dimen/dp15"
                       android:layout_height="@dimen/dp15"
                       android:clickable="false"
                       android:src="@drawable/re_search_big"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="@dimen/dp15"
                       android:text="搜索"
                       android:textColor="@color/color_b2"
                       android:textSize="12sp"/>


               </LinearLayout>

               <EditText
                   android:id="@+id/etSearch"
                   android:layout_marginStart="@dimen/dp10"
                   android:layout_marginEnd="@dimen/dp10"
                   android:layout_marginTop="@dimen/dp05"
                   android:layout_marginBottom="@dimen/dp05"
                   android:background="@null"
                   android:singleLine="true"
                   android:imeOptions="actionSearch"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"/>

               <LinearLayout
                   android:id="@+id/layoutSearch"
                   android:layout_width="@dimen/dp44"
                   android:layout_height="@dimen/dp44"
                   android:layout_centerVertical="true"
                   android:gravity="center"
                   android:visibility="gone"
                   android:layout_marginEnd="@dimen/dp15"
                   android:layout_alignParentEnd="true">

                   <ImageView
                       android:layout_width="@dimen/dp22"
                       android:layout_height="@dimen/dp22"
                       android:clickable="false"
                       android:src="@drawable/searchbar"/>

               </LinearLayout>


           </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvMaind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:gravity="center"
        android:background="#FEECE8"
        android:paddingTop="@dimen/dp08"
        android:paddingBottom="@dimen/dp08"
        android:textColor="@color/color_b1"
        android:text="长按货品条目，可操作商品下架"/>

    <com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:guidance_text_color="@color/colorPrimary"
        app:guidance_view_bg_color="@color/transparent"
        app:progress_bar_color="@color/colorPrimary">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcPublishManage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="@null"
            android:overScrollMode="never"
            android:paddingBottom="8dp"
            android:scrollbars="none"/>

    </com.scu.miomin.shswiperefresh.core.SHSwipeRefreshLayout>
</LinearLayout>

