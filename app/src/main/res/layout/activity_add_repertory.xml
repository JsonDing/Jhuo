<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6000000"
    android:clickable="true"
    tools:context="com.yunma.publish.AddRepertoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#00000000"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:background="#00000000"
                    android:layout_height="@dimen/dp169"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp102"
                    android:background="@color/white"
                    android:layout_below="@+id/view">


                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgGoods"
                    android:layout_width="@dimen/dp106"
                    android:layout_height="@dimen/dp106"
                    android:layout_below="@+id/view"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_pic"/>

                <ImageView
                    android:id="@+id/imgClose"
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:src="@drawable/close"
                    android:layout_below="@+id/view"
                    android:layout_marginEnd="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:id="@+id/tvGoodsName"
                    android:text="@string/app_name"
                    android:textSize="@dimen/sp13"
                    android:maxLines="2"
                    android:layout_below="@+id/view"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp12"
                    android:layout_toEndOf="@+id/imgGoods"
                    android:layout_toStartOf="@+id/imgClose"
                    android:textIsSelectable="true"
                    android:textColor="@color/color_b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvGoodsPrice"
                    android:text="￥898.00"
                    android:textSize="@dimen/sp12"
                    android:maxLines="1"
                    android:layout_below="@+id/tvGoodsName"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp06"
                    android:layout_toEndOf="@+id/imgGoods"
                    android:layout_toStartOf="@+id/imgClose"
                    android:textColor="@color/color_b4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvGoodsRemain"
                    android:text="库存320件"
                    android:textSize="@dimen/sp12"
                    android:maxLines="1"
                    android:layout_below="@+id/tvGoodsPrice"
                    android:layout_marginStart="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp04"
                    android:layout_toEndOf="@+id/imgGoods"
                    android:layout_toStartOf="@+id/imgClose"
                    android:textColor="@color/color_b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:background="@color/color_a4"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSelectSizeNums"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/white"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp44"
                android:text="确定"
                android:background="@color/color_a1"
                android:textSize="@dimen/sp15"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
