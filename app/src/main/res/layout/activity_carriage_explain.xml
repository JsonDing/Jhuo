<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:background="@color/tittle_bar">

        <RelativeLayout
            android:id="@+id/layoutBack"
            android:layout_width="@dimen/dp44"
            android:background="@color/white"
            android:layout_height="@dimen/dp44">

            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:clickable="false"
                android:layout_centerInParent="true"
                android:src="@drawable/re_back" />

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认订单"
            android:gravity="center"
            android:background="@color/white"
            android:paddingEnd="@dimen/dp44"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp17"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lvExplain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:divider="@null"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@color/white"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginEnd="@dimen/dp15">

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费："
            android:layout_centerVertical="true"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥189"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv01"
            android:layout_marginStart="@dimen/dp10"
            android:textColor="@color/color_b4"
            android:textSize="@dimen/sp15"/>

        <LinearLayout
            android:id="@+id/layoutAddMore"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:gravity="center"
            android:background="@color/color_a3"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:src="@drawable/add_more"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etGoodsNums"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp22"
            android:text="2"
            android:minWidth="@dimen/dp22"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp02"
            android:background="@color/color_a3"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/layoutAddMore"
            android:textColor="@color/color_b1"
            android:textSize="@dimen/sp15"/>

        <LinearLayout
            android:id="@+id/layoutMinusMore"
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:gravity="center"
            android:layout_marginEnd="@dimen/dp02"
            android:layout_toStartOf="@+id/etGoodsNums"
            android:background="@color/color_a3"
            android:layout_centerVertical="true">

            <View
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp02"
                android:background="@color/color_b1" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp15"
        android:paddingEnd="@dimen/dp15"
        android:paddingBottom="@dimen/dp10"
        android:paddingTop="@dimen/dp10"
        android:background="@color/color_a4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a3"
            android:text="运费说明："/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_a3"
            android:text="首费一件10.00元，具体参考PC端"/>
    </LinearLayout>

    <View
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:background="@color/black"/>

</LinearLayout>
