<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/a4"/>

    <LinearLayout
        android:id="@+id/itemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutSelected"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp44"
            android:gravity="center">

            <CheckBox
                android:id="@+id/cbSelect"
                android:layout_width="@dimen/dp16"
                android:layout_height="@dimen/dp16"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginEnd="@dimen/dp10"
                android:background="@drawable/check_box_style"
                android:button="@null"
                android:clickable="false"
                android:checked="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvReceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:ems="4"
                    android:textColor="@color/b1"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp16"/>

                <TextView
                    android:id="@+id/tvNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:ems="6"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/b1"
                    android:textSize="@dimen/sp16"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgIsShow"
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:layout_marginStart="@dimen/dp15"
                        android:src="@drawable/addr_hide"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone"
                android:lineSpacingExtra="@dimen/dp04"
                android:layout_marginEnd="@dimen/dp10"
                android:textColor="@color/b1"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutModifyAddress"
            android:layout_width="@dimen/dp54"
            android:layout_height="@dimen/dp44"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:id="@+id/view"
                android:layout_width="2dp"
                android:layout_height="@dimen/dp28"
                android:background="@color/a4"/>


            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:clickable="false"
                android:layout_marginStart="@dimen/dp10"
                android:src="@drawable/compile"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/a4"/>

</LinearLayout>