<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layouStatusBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@color/tittle_bar"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layoutBack"
            android:layout_width="44dp"
            android:background="@color/white"
            android:layout_height="44dp"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/re_back"/>

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:paddingEnd="44dp"
            android:textSize="17sp"
            android:textColor="#2e2e3a"
            android:text="找回密码"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/layout">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:contentDescription="@string/input_account"
            android:layout_gravity="center_vertical"
            android:src="@drawable/re_mobile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/color_b2"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:inputType="phone"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:textCursorDrawable="@null"
            android:textColor="@color/color_b1"
            android:background="@null"
            android:textColorHint="@color/color_b2"
            android:maxLines="1"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/layoutGetCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="12sp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:clickable="false"
                android:focusable="false"
                android:textColor="@color/color_b2"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c2c2c2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:contentDescription="@string/input_account"
            android:layout_gravity="center_vertical"
            android:src="@drawable/re_code"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/color_b2"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:textCursorDrawable="@null"
            android:textColor="@color/color_b1"
            android:background="@null"
            android:inputType="number"
            android:textColorHint="@color/color_b2"
            android:maxLines="1"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c2c2c2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:contentDescription="@string/input_passwd"
            android:layout_gravity="center_vertical"
            android:src="@drawable/re_password"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_passwd"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/color_b2"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/etPasswd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp44"
            android:textCursorDrawable="@null"
            android:inputType="textPassword"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_b1"
            android:background="@null"
            android:maxLines="1"
            android:hint="New Password"
            android:textColorHint="#c2c2c2"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#c2c2c2"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_selector_orange"
        android:text="@string/confirm"
        android:textSize="@dimen/sp16"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>
