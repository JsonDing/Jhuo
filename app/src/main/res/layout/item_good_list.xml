<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/a4"
        android:padding="@dimen/dp10">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="@dimen/dp76"
            android:layout_height="@dimen/dp76"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp13"
            android:textColor="@color/b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java软件工程师"
            android:maxLines="2"
            android:textSize="@dimen/sp12"
            android:textColor="@color/b2"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp11"
            android:textColor="@color/b4"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="@dimen/sp14"
            android:textColor="@color/b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mNoDataLo"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/gallery_photo_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="@dimen/sp15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="此商品暂时无货"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp13"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dp05"
            android:text="您可以点击“申请售后”进行退款处理"/>

    </LinearLayout>

</FrameLayout>