<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusable="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_a4"
        android:padding="@dimen/dp10">

        <ImageView
            android:id="@+id/imgGoods"
            android:layout_width="@dimen/dp76"
            android:layout_height="@dimen/dp76"
            android:scaleType="fitXY"
            android:src="@drawable/default_pic"/>

        <TextView
            android:id="@+id/tvGoodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textIsSelectable="true"
            android:textSize="@dimen/sp13"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="3dp"
            android:layout_alignTop="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java软件工程师"
            android:maxLines="2"
            android:textSize="@dimen/sp12"
            android:textColor="@color/color_b2"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tvGoodsName"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥189.0"
            android:textSize="@dimen/sp11"
            android:textColor="@color/color_b4"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_toEndOf="@+id/imgGoods"/>

        <TextView
            android:id="@+id/tvGoodsNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x2"
            android:textSize="@dimen/sp14"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp10"
            android:layout_alignBottom="@+id/imgGoods"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>