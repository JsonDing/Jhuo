<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/dp38"
        android:gravity="center_horizontal"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/lineTop4"
            android:layout_width="@dimen/dp01"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/a3"/>

        <ImageView
            android:id="@+id/circlePoint"
            android:layout_width="@dimen/dp13"
            android:layout_height="@dimen/dp13"
            android:src="@drawable/circle_gray"/>

        <View
            android:id="@+id/lineBottom4"
            android:layout_width="@dimen/dp01"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/a3"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_return_progress_gray"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp05">

        <TextView
            android:id="@+id/tvWho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[买家]  请退货"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/white"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/tvReturnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp09"
            android:text="说明：请于2日内填写物流信息"
            android:layout_marginStart="@dimen/dp10"
            android:layout_below="@+id/tvWho"
            android:textColor="@color/white"
            android:textSize="@dimen/sp11"/>

        <Button
            android:id="@+id/btnWriteExpress"
            android:layout_width="@dimen/dp81"
            android:layout_height="@dimen/dp28"
            android:text="填写物流"
            android:textSize="@dimen/sp12"
            android:textColor="@color/b3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginEnd="@dimen/dp15"
            android:background="@drawable/btn_item_return_progress_white"/>
    </RelativeLayout>

</LinearLayout>