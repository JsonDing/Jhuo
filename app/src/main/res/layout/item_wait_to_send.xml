<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp15"
            android:layout_centerVertical="true"
            android:text="2016-12-12"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="正在揽货"
            android:visibility="visible"
            android:textColor="@color/color_b4"
            android:textSize="@dimen/sp14"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yunma.widget.MyListView
            android:id="@+id/rvGoodsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_b1"
            android:layout_marginStart="@dimen/dp15"
            android:textSize="@dimen/sp13"
            android:text="订单号:"/>

        <TextView
            android:id="@+id/tvTotalNums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp32"
            android:layout_toStartOf="@+id/textview"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="合计"
            android:layout_toStartOf="@+id/tvTotalPrice"
            android:textColor="@color/color_b2"
            android:textSize="@dimen/sp13"/>

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_b4"
            android:textSize="@dimen/sp13"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/color_a4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44">

        <Button
            android:id="@+id/btnNotSend"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp28"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="我要催单"
            android:background="@drawable/bg_button_orange"
            android:textColor="@color/color_b3"
            android:textSize="@dimen/sp13"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"
        android:background="@color/color_a4"/>

</LinearLayout>